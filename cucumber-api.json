{
    "default": {
        "tags": "@API",
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "e2e/API/test/features/"
        ],
        "publishQuiet": true,
        "DryRun": false,
        "require": [
            "e2e/API/test/steps/*.steps.ts",
            "e2e/API/hooks/hook.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "html:test-results/cucumber-report.html",
            "json:test-results/cucumber-report.json"
        ]
    }
}
